<style>
    .pull-right {
        float: right !important;
    }
</style>

@model List<P1_AquariumFishStore_TeamAkshay.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Products</li>

    </ol>




    <div class="row">


        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Product Details
            <a href="../Admin/AddProduct" class="btn btn-info pull-right ">Add New</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Location</th>
                        <th>Category</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Location</th>
                        <th>Category</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>@(Model.IndexOf(item)+1)</td>
                        <td>@item.Name</td>
                        <td>@item.Location</td>
                        <td>@item.ProductType</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>
                            @Html.ActionLink("Update", "productUpdate", new { id = item.Id , loc = item.Location })
                            @Html.ActionLink("Delete", "productDelete", new { id = item.Id, locId = item.locationId })
                        </td>


                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



