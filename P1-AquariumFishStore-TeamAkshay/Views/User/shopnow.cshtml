<div class="container">
    <h2 style="font-size:50px;color:darkblue;text-decoration-style:wavy;text-align:center">Our Products</h2>
   
</div>

<section class="products" >
    @foreach (var item in Model)
    {
        <div class="box-container" id="products" style="width =50%; color: darkgoldenrod">
            <div class="box">

                <div style="height:40px;width:50px;align-self:center">
                    <img style="height:210px ; border-radius:14px ; border:solid 2px darkblue"  src="~/Img/img2.jpg" alt="">
                </div>
                <div>
                    <div class="col-md-10" style="text-align: right">
                        <h3>@item.Name</h3>
                    </div>
                    <div class="col-md-10" style="text-align: right; color: darkred">
                        <b>@item.ProductType</b>
                    </div>
                    <div class="col-md-10" style="text-align: right; color: darkred">
                        <b>@item.Location</b>
                    </div>
                    <div class="col-md-10" style="font-size: 18px;  padding: 2px; text-align: right">
                        <b>@item.Price.ToString("#,##0.00 INR")</b>
                    </div>
                </div>
                <div class="col-md-10" style="text-align: right; margin-bottom: 10px;  padding: 2px">
                      <span style="color:aliceblue;font-weight:bold;" class = "btn btn-info pull-right">
                        @Html.ActionLink("Add to Cart", "addtocart", "User", new { id = item.Id })
                    </span>
                </div>
            </div>
            
        </div>
    }
    </section>
